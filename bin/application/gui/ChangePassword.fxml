<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ChangePasswordController">
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label layoutX="133.0" layoutY="14.0" text="Change Password">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
            <Label layoutX="212.0" layoutY="101.0" text="New Password" />
            <Label layoutX="203.0" layoutY="169.0" text="Confirm Password" />
            <PasswordField fx:id="newField" layoutX="177.0" layoutY="128.0" />
            <PasswordField fx:id="confirmField" layoutX="177.0" layoutY="199.0" />
            <Button layoutX="185.0" layoutY="250.0" mnemonicParsing="false" onAction="#confirmLogin" text="Create New Password" />
            <Label fx:id="errorMessage" layoutX="183.0" layoutY="290.0" opacity="0.0" text="Passwords Do Not Match" textFill="RED" />
         </children>
      </AnchorPane>
   </children>
</VBox>
