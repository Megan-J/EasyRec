<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="500.0">
         <children>
            <Label alignment="CENTER" layoutX="180.0" layoutY="37.0" prefHeight="43.0" prefWidth="142.0" text="EasyRec" textAlignment="CENTER">
               <font>
                  <Font name="Futura Medium" size="35.0" />
               </font>
            </Label>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#5a84a8" height="375.0" layoutY="127.0" stroke="TRANSPARENT" strokeType="INSIDE" width="500.0" />
            <Label alignment="CENTER" layoutX="185.0" layoutY="149.0" prefHeight="56.0" prefWidth="133.0" text="Welcome" textFill="WHITE">
               <font>
                  <Font name="Avenir Book" size="27.0" />
               </font>
            </Label>
            <PasswordField fx:id="PasswordField" layoutX="159.0" layoutY="251.0" promptText="Password">
               <font>
                  <Font name="Avenir Book" size="15.0" />
               </font></PasswordField>
            <Button fx:id="loginBtn" defaultButton="true" layoutX="207.0" layoutY="345.0" mnemonicParsing="false" onAction="#Login" prefHeight="35.0" prefWidth="87.0" text="Sign In">
               <font>
                  <Font name="Avenir Book" size="16.0" />
               </font></Button>
            <Label alignment="CENTER" layoutX="137.0" layoutY="198.0" prefHeight="43.0" prefWidth="230.0" text="Enter your password" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Avenir Heavy" size="21.0" />
               </font>
            </Label>
            <Label fx:id="incorrectLabel" alignment="CENTER" layoutX="138.0" layoutY="293.0" opacity="0.0" prefHeight="43.0" prefWidth="230.0" text="Incorrect password, try again" textAlignment="CENTER" textFill="#d05050">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</VBox>
